<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tree Movie - register</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <main class="register-form">
        <div class="capa-fondo">
            <img src="/design/images/icons/logo.png " alt="">
            <div class="form-container" style="width: 300px;">
                <h1>Registro</h1>
                <hr>

                <form action="/user/register" id="form" method="POST" enctype="multipart/form-data" class="form-ad">
                    <div class="form-regis">

                        <div class="input-container column">
                            <input class="input-style" id="name" type="name" name="name" placeholder="Ingrese su Nombre"
                                value="<%= locals.old && old.name %>">
                            <% if (typeof errors != "undefined" && errors.name) { %>
                            <span class="text-danger profile" id="nameErrors"><%= errors.name.msg %> </span>
                            <% } %>
                        </div>

                        <div class="input-container column">
                            <input class="input-style"id="lastname" type="surname" name="lastname" placeholder="Ingrese su Apellido"
                                value="<%= locals.old && old.lastname %>">
                            <% if (typeof errors != "undefined" && errors.lastname) { %>
                            <span class="text-danger" id="lastnameErrors"><%= errors.lastname.msg %> </span>
                            <% } %>
                        </div>

                        <div class="input-container column">
                            <input class="input-style" id="email" type="email" name="email" placeholder="Ingrese su Email"
                                value="<%= locals.old && old.email %>">
                            <% if (typeof errors != "undefined" && errors.email) { %>
                            <span class="text-danger" id="emailErrors"><%= errors.email.msg %> </span>
                            <% } %>
                        </div>

                        <div class="input-container column">
                            <input class="input-style" id="pass1" type="password" name="pass1" placeholder="Ingrese su Contraseña">
                            <% if (typeof errors != "undefined" && errors.pass1) { %>
                            <span class="text-danger " id="pass1Errors"><%= errors.pass1.msg %> </span>
                            <% } %>
                        </div>

                        <div class="input-container column">
                            <input class="input-style" id="pass2"type="password" name="pass2"
                                placeholder="Reingrese su Contraseña">
                            <% if (typeof errors != "undefined" && errors.pass2) { %>
                            <span class="text-danger" id="pass2Errors"><%= errors.pass2.msg %> </span>
                            <% } %>
                        </div>
                        <div class="form-check column">
                            <input name="terms" class="form-check-input" id="terms" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Acepto los <a href="">términos y condiciones</a>
                            </label>
                          </div>
                          <% if (locals.errors && errors.terms) { %>
                            <small class="text-danger" id="termsErrors"><%= errors.terms.msg %></small>
                        <% } %>

                        <span class="error-message">Hubo errores en el envío</span>

                        <div class="d-flex"> 
                            <button type="submit" class="btn btn-submit" style="margin-right: 10px;">Registrarme</button>
                            <button type="button" class="btn btn-submit"><a href="/user/login" >Ya tengo cuenta</a></button>
                           
                        </div>

                

                </form>
            </div>
        </div>
    </main>
    <script src="/js/registerFront.js"></script>
    </body>

</html>