<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <title>Edit products</title>
  </head>

  <body>
    <div class="form-container">
      <h1>Editar producto</h1>
      <form
        action="/admin/products/edit/<%= producto.id %>?_method=PUT"
        method="POST" >
        <div class="form-1">
          <div class="input-container">
            <input
              id="iname"
              class="input-style"
              type="text"
              name="name"
              placeholder="Nombre de pelicula"
              value="<%= producto.name %>"
            />
            <span class="error-message">Debes ingresar una pelicula</span>
          </div>
          <div class="input-container">
            <span class="error-message">Debes ingresar un género</span>
            <% generos.forEach(category => { %>
            <label>
              <input
                type="checkbox"
                name="category"
                id="category"
                class="input-style"
                placeholder="Género"
                value="<%= category.id %>"/>
              <%= category.name %>
            </label>
            <% }) %>
            <option value=""></option>
          </div>
          <div class="input-container">
            <input
              id="number"
              class="input-style"
              type="year"
              name="age"
              placeholder="Año"
              value="<%= producto.age %>"/>
            <span class="error-message">Debes ingresar un año</span>
          </div>
          <div class="input-container">
            <input
              id="precio"
              class="input-style"
              type="number"
              name="price"
              placeholder="Precio"
              value="<%= producto.precio %>"/>
            <span class="error-message">Debes ingresar un precio</span>

            <div class="input-container">
              <textarea
                class="input-style"
                type="text"
                name="description"
                style="position: relative; right: 1rem; top: 1rem"
                placeholder="Descripción">
             <%= producto.descripcion %></textarea>
              <span class="error-message">Debes ingresar una descripción</span>
            </div>

            <div class="input-container">
                <input
                  class="input-style"
                  type="text"
                  name="reparto"
                  style="position: relative; right: 1rem; top: 1rem"
                  ;
                  placeholder="Reparto"/>
                <span class="error-message">Debes ingresar el reparto</span>
              </div>
              <div class="input-container">
                <input
                  class="input-style"
                  type="text"
                  name="direction"
                  style="position: relative; right: 1rem; top: 1rem"
                  ;
                  placeholder="Ingresa quien dirige la película"/>
                <span class="error-message">Debes ingresar un nombre</span>
              </div>
              <div class="input-container">
                <input
                  class="input-style"
                  type="text"
                  name="duration"
                  style="position: relative; right: 1rem; top: 1rem"
                  ;
                  placeholder="Duración"/>
                <span class="error-message">Debes ingresar una cantidad de minutos</span>
              </div>
              <div class="input-container">
                <input
                  class="input-style"
                  type="text"
                  name="trailer"
                  style="position: relative; right: 1rem; top: 1rem"
                  ;
                  placeholder="Url del trailer"/>
                <span class="error-message">Debes ingresar una url</span>
              </div>

            <div class="input-container">
              <input
                class="input-style"
                type="file"
                name="file"
                placeholder="Archivo"/>
              <figure>
                <img
                  src="/design/images/products/<%= producto.image %>"/>
              </figure>
            </div>

            <span class="error-message">Hubo errores en el formulario</span>
            <center>
              <buttom class="btn-cont" type="submit" value="Guardar">Guardar</buttom>
            </center>
          </div>
        </div>
        <input type="submit">/>
      </form>
    </div>
  </body>
</html>
