  <title>Crear producto</title>
</head>

<body>
  <div class="admin-productNew">
    <h1>Crear producto</h1>
    <div class="form">
      <form action="/admin/products/new" method="POST" enctype="multipart/form-data">

        <div class="input-container">
          <input id="iname" class="input-style" type="text" name="name" placeholder="Nombre de pelicula" />
          <span class="error-message">Debes ingresar una pelicula</span>
        </div>
        <div class="input-container check-container">
          <% generos.forEach(category => { %>
          <div class="box-container">
            <label>
              <input type="checkbox" name="category" id="category" class="input-style" placeholder="Género"
                value="<%= category.id %>" /><%= category.name %>
            </label>
          </div>
          <% }) %>
          <span class="error-message">Debes ingresar un género</span>
        </div>
        <div class="input-container">
          <input id="number" class="input-style" type="number" name="age" placeholder="Año" />
          <span class="error-message">Debes ingresar un año</span>
        </div>
        <div class="input-container">
          <input id="precio" class="input-style" type="number" name="price" placeholder="Precio" />
          <span class="error-message">Debes ingresar un precio</span>

          <div class="input-container">
            <input class="input-style" type="text" name="reparto" style="position: relative; right: 1rem; top: 1rem" ;
              placeholder="Reparto" />
            <span class="error-message">Debes ingresar el reparto</span>
          </div>
          <div class="input-container">
            <input class="input-style" type="text" name="direction" style="position: relative; right: 1rem; top: 1rem" ;
              placeholder="Ingresa quien dirige la película" />
            <span class="error-message">Debes ingresar un nombre</span>
          </div>
          <div class="input-container">
            <input class="input-style" type="text" name="duration" style="position: relative; right: 1rem; top: 1rem" ;
              placeholder="Duración" />
            <span class="error-message">Debes ingresar una cantidad de minutos</span>
          </div>
          <div class="input-container">
            <input class="input-style" type="text" name="trailer" style="position: relative; right: 1rem; top: 1rem" ;
              placeholder="Url del trailer" />
            <span class="error-message">Debes ingresar una url</span>
          </div>

          <div class="input-container">
            <input class="input-style" type="text" name="description" style="position: relative; right: 1rem; top: 1rem"
              ; placeholder="description" />
            <span class="error-message">Debes ingresar una url</span>
          </div>

          <div class="input-container">
            <input class="input-style" type="file" name="file" placeholder="Archivo" />
          </div>

          <span class="error-message">Hubo errores en el formulario</span>
          <center>
            <button class="btn-cont" onclick="alert('Guardado!');" type="submit" value="Guardar">
              Guardar
            </button>
          </center>
        </div>
      </form>
    </div>

  </div>
</body>

</html>